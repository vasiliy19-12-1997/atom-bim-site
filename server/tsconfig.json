{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",          
    "rootDir": "./src",           
    "baseUrl": "../",              
    "paths": {
      "/*": ["src/*"]            
    }
  },
  "include": ["src/**/*"],        
  "exclude": ["node_modules"]
}