{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
       "*": ["./src/*"],
    }
  },
  "include": [ "./src/**/*.ts",
    "./src/**/*.tsx", "index.ts"],
  "exclude": ["node_modules"]
}
